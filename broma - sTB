       <h1>Â¡Bienvenido a la Broma! ðŸ˜ˆ</h1>
       <p>Â¡Ja ja! Intenta cerrar esta pÃ¡gina... pero las alertas volverÃ¡n (solo 5 veces).</p>
       <button onclick="detenerBroma()">Detener la Broma</button>
       
       <script>
           let bromaActiva = true;  // Variable para detener el bucle
           
           function mostrarBroma() {
               if (!bromaActiva) return;  // Si se detiene, no continÃºa
               
               alert("Â¡Ja ja! Â¡Esta broma no para! ðŸ˜ˆ\nIntenta cerrarla... pero volverÃ¡.");
               
               // Pausa de 1 segundo antes de la siguiente (usa setTimeout para simular)
               setTimeout(mostrarBroma, 1000);
           }
           
           // Bucle finito: Llama la funciÃ³n 5 veces
           let contador = 0;
           function iniciarBroma() {
               function repetir() {
                   if (contador < 5 && bromaActiva) {
                       mostrarBroma();
                       contador++;
                   } else {
                       alert("Â¡Broma terminada! ðŸ˜Š Puedes cerrar la pÃ¡gina ahora.");
                   }
               }
               repetir();
           }
           
           // FunciÃ³n para detener (opcional, para ser Ã©tico)
           function detenerBroma() {
               bromaActiva = false;
               alert("Â¡Broma detenida! Buena jugada. ðŸ˜‰");
           }
           
           // Inicia al cargar la pÃ¡gina
           window.onload = iniciarBroma;
       </script>
