<body>
    <h1>Â¡Bienvenido a la Broma! ðŸ˜ˆ</h1>
    <p>Â¡Ja ja! Intenta cerrar esta pÃ¡gina... pero las alertas volverÃ¡n (solo 5 veces).</p>
    <button onclick="detenerBroma()">Detener la Broma</button>
    
    <!-- Modal personalizado para las "alertas" -->
    <div id="miModal" class="modal">
        <div class="modal-content">
            <h2>Â¡Ja ja! ðŸ˜ˆ</h2>
            <p id="mensajeModal">Â¡Esta broma no para! Intenta cerrarla... pero volverÃ¡.</p>
            <button class="close-btn" onclick="cerrarModal()">Cerrar</button>
        </div>
    </div>
    
    <script>
        let bromaActiva = true;
        let intervaloBroma;  // Para controlar el intervalo
        let contador = 0;
        const MAX_ALERTAS = 5;
        
        function mostrarBroma() {
            if (!bromaActiva || contador >= MAX_ALERTAS) return;
            
            // Actualiza el mensaje con el contador
            document.getElementById('mensajeModal').innerHTML = 
                `Â¡Ja ja! Â¡Esta broma no para! ðŸ˜ˆ<br>Alerta ${contador + 1} de ${MAX_ALERTAS}. Intenta cerrarla... pero volverÃ¡.`;
            
            // Muestra el modal
            document.getElementById('miModal').style.display = 'block';
            contador++;
        }
        
        function cerrarModal() {
            document.getElementById('miModal').style.display = 'none';
            
            // Si no se ha detenido y no hemos llegado al lÃ­mite, programa la siguiente
            if (bromaActiva && contador < MAX_ALERTAS) {
                setTimeout(mostrarBroma, 1000);  // Pausa de 1 segundo
            } else if (contador >= MAX_ALERTAS) {
                mostrarMensajeFinal();
            }
        }
        
        function mostrarMensajeFinal() {
            alert("Â¡Broma terminada! ðŸ˜Š Puedes cerrar la pÃ¡gina ahora.");  // Usa alert nativo solo para el final
        }
        
        function detenerBroma() {
            bromaActiva = false;
            document.getElementById('miModal').style.display = 'none';  // Cierra modal si estÃ¡ abierto
            alert("Â¡Broma detenida! Buena jugada. ðŸ˜‰");
        }
        
        // Inicia la broma al cargar la pÃ¡gina
        window.onload = function() {
            // Usa setInterval para un control mÃ¡s preciso (cada 2 segundos: 1s pausa + 1s para cerrar modal)
            intervaloBroma = setInterval(function() {
                if (bromaActiva && contador < MAX_ALERTAS) {
                    mostrarBroma();
                } else {
                    clearInterval(intervaloBroma);
                    if (contador >= MAX_ALERTAS) {
                        mostrarMensajeFinal();
                    }
                }
            }, 2000);  // Intervalo total: muestra cada 2 segundos
        };
        
        // Cierra modal si se hace clic fuera de Ã©l
        window.onclick = function(event) {
            const modal = document.getElementById('miModal');
            if (event.target == modal) {
                cerrarModal();
            }
        }
    </script>
